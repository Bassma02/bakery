@model Bassma.Models.Livraison

@{
    ViewData["Title"] = "Créer une Livraison";
}

<section class="create-livraison-section">
    <h1 class="text-center my-5" style="color: #42262A; font-weight: bold;">Créer une Nouvelle Livraison</h1>

    <div class="card mx-auto" style="max-width: 600px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); border-radius: 15px; border: none;">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <div class="form-group mb-3">
                    <label asp-for="UserId" class="form-label" style="font-weight: bold; color: #42262A;">Utilisateur</label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId" style="border: 2px solid #ccc; border-radius: 5px;"></select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CommandeId" class="form-label" style="font-weight: bold; color: #42262A;">Commande</label>
                    <select asp-for="CommandeId" class="form-control" asp-items="ViewBag.CommandeId" style="border: 2px solid #ccc; border-radius: 5px;"></select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Date" class="form-label" style="font-weight: bold; color: #42262A;">Date</label>
                    <input asp-for="Date" class="form-control" style="border: 2px solid #ccc; border-radius: 5px;" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Status" class="form-label" style="font-weight: bold; color: #42262A;">Statut</label>
                    <input asp-for="Status" class="form-control" style="border: 2px solid #ccc; border-radius: 5px;" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <input type="submit" value="Créer" class="btn btn-lg" style="background-color: #42262A; color: white; padding: 10px 40px; font-weight: bold; border-radius: 25px;" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary" style="border-radius: 25px; padding: 10px 30px; font-weight: bold;">Retour à la liste</a>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
