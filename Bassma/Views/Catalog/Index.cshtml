@{
    ViewData["Title"] = "Catalog";
}
<!-- Link to Original Surfer font -->
<link href="https://fonts.googleapis.com/css2?family=Original+Surfer&display=swap" rel="stylesheet">

<!-- Link to Oxygen font -->
<link href="https://fonts.googleapis.com/css2?family=Oxygen:wght@300;400;700&display=swap" rel="stylesheet">

<link href="https://fonts.googleapis.com/css2?family=Playfair+Display+SC:wght@700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">

<link href="https://fonts.googleapis.com/css2?family=Poiret+One&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/styles.css">
<!-- Navbar Section -->
<header>
    <nav class="navbar">
        <!-- Search Icon (Top Left) -->
        <div class="nav-search">
            <input type="text" class="search-input" placeholder="Search...">
        </div>


        <!-- Left Section (Home, Catalog) -->
        <div class="nav-left">
            <a href="/" class="nav-link">HOME</a>
            <a href="/Catalog" class="nav-link">CATALOG</a>
        </div>

        <!-- Center Logo -->
        <div class="nav-center">
            <a href="/"><img src="~/images/logo.png" alt="Sweet Cravings Logo" class="logo"></a>
        </div>


        <!-- Right Section (Shop, Contact) -->
        <div class="nav-right">
            <a href="/Shop" class="nav-link">SHOP</a>
            <a href="/#contact" class="nav-link">CONTACT</a>
        </div>

        <!-- Auth Buttons (Sign Up, Login) -->
        <div class="nav-auth">
            <a href="/Identity/Account/Register" class="btn-signup">SIGN UP</a>
            <a href="/Identity/Account/Login" class="btn-login">LOGIN</a>

        </div>
    </nav>
</header>
<section class="catalog-hero">
    <div class="catalog-overlay">
        <div class="catalog-content">
            <h1 class="hero-title">Treat Yourself Today!</h1>
            <p class="hero-subtitle">Discover Your Favorites!</p>
            <a href="/Shop" class="btn-cta">Wanna Buy A Cake</a>
        </div>
    </div>
</section>

<!-- Colored Background Section -->
<section class="colored-banner">
    <div class="banner"></div>
</section>

<!-- Two-Column Layout Section -->
<section class="two-column-layout">
    <div class="left-large-card">
        <img src="/images/croissant.jpeg" alt="Croissants" class="large-card-image">
        <div class="card-overlay">
            <h3>WE CREATE SWEET MEMORIES</h3>
            <p>Freshly Baked Every Day Just for You</p>
        </div>
    </div>
    <div class="right-small-cards">
        <div class="small-card">
            <img src="/images/m.jpg" alt="Donuts" class="small-card-image">
            <div class="card-overlay">
                <h3>Indulge in Sweet Delight</h3>
                <p>Treat Yourself to Our Finest Creations !!</p>
                <button class="btn-card">ORDER NOW</button>
            </div>
        </div>
        <div class="small-card">
            <img src="/images/3.jpg" alt="Cake" class="small-card-image">
            <div class="card-overlay">
                <h3>Experience Freshness</h3>
                <p>Crispy, Flaky, and Perfectly Baked $$</p>
                <button class="btn-card">GRAB A BITE</button>
            </div>
        </div>
    </div>
</section>

<!-- New Arrivals Section -->
<section class="catalog-new-arrivals">
    <!-- NEW ARRIVALS BOX -->
    <div class="new-arrivals-box">
        <div class="arrows">
            <button class="arrow-btn">‹</button>
            <button class="arrow-btn">›</button>
        </div>
        <h2>NEW ARRIVALS</h2>
        <div class="view-all-products">
            <span class="btn-view-products">VIEW ALL PRODUCTS</span>
        </div>
    </div>

    <!-- PRODUCT GRID -->
    <div class="product-grid">
        <!-- Product 1 -->
        <div class="product-card">
            <img src="/images/444.png" alt="Strawberry Heaven Cupcakes" class="product-image">
            <h3>Strawberry Heaven Cupcakes</h3>
            <p>18 MAD</p>
            <button class="btn-add-to-cart">ADD TO CART</button>
        </div>

        <!-- Product 2 -->
