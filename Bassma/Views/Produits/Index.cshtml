@model IEnumerable<Bassma.Models.Produit>

@{
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}

<div class="main-content position-relative border-radius-lg">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-end">Index des Produits</h1>
        <a asp-action="Create" class="btn btn-primary">Créer Nouveau Produit</a>
    </div>

    <!-- Table Section -->
    <div class="card shadow">
        <div class="card-header bg-gradient-primary text-white">
            <h5 class="mb-0">Liste des Produits</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-items-center mb-0">
                <thead class="thead-light">
                    <tr>
                        <th>Image</th>
                        <th>@Html.DisplayNameFor(model => model.Nom)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>@Html.DisplayNameFor(model => model.Prix)</th>
                        <th>@Html.DisplayNameFor(model => model.UserId)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <!-- Image Column -->
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImagePath))
                                {
                                    <img src="@item.ImagePath" alt="@item.Nom" style="width: 80px; height: 80px; object-fit: cover; border-radius: 5px;" />
                                }
                                else
                                {
                                    <span class="text-muted">No Image</span>
                                }
                            </td>

                            <!-- Other Product Details -->
                            <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>@Html.DisplayFor(modelItem => item.Prix)</td>
                            <td>@Html.DisplayFor(modelItem => item.UserId)</td>

                            <!-- Actions -->
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Modifier</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Détails</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Supprimer</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
