@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<header>
    <nav class="navbar">
        <!-- Search Icon (Top Left) -->
        <div class="nav-search">
            <input type="text" class="search-input" placeholder="Search...">
        </div>


        <!-- Left Section (Home, Catalog) -->
        <div class="nav-left">
            <a href="/" class="nav-link">HOME</a>
            <a href="/Catalog" class="nav-link">CATALOG</a>
        </div>

        <!-- Center Logo -->
        <div class="nav-center">
            <a href="/"><img src="~/images/logo.png" alt="Sweet Cravings Logo" class="logo"></a>
        </div>


        <!-- Right Section (Shop, Contact) -->
        <div class="nav-right">
            <a href="/Shop" class="nav-link">SHOP</a>
            <a href="#contact" class="nav-link">CONTACT</a>
        </div>

        <!-- Auth Buttons (Sign Up, Login) -->
        <div class="nav-auth">
            <a href="/Identity/Account/Register" class="btn-signup">SIGN UP</a>
            <a href="/Identity/Account/Login" class="btn-login">LOGIN</a>

        </div>
    </nav>
</header>
<style>

    /* Forgot Password Section */
    .forgot-password-section {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-top: 120px; /* Adjust for navbar */
        height: 100vh;
        background-color: #fdfdfd;
    }

    /* Image Container */
    .forgot-password-image-container {
        flex: 0 0 55%; /* Image covers 55% of the screen width */
        height: 100vh; /* Full height of the viewport */
        overflow: hidden;
        margin-left: 150px;
    }

    .forgot-password-image {
        width: 600px; /* Increase the width */
        height: 86vh; /* Maintain the height as a percentage of viewport height */
        margin-left: -20%;
        object-position: center; /* Centers the image horizontally */
        margin: 0 auto; /* Center the image container */
        border-radius: 0px;
        padding-top: 50px;
    }

    /* Form Container */
    .forgot-password-form-container {
        flex: 0 0 45%; /* Form covers the remaining 45% */
        max-width: 450px;
        margin-right: 190px; /* Adjust margin */
        margin-left: -30%;
        text-align: left; /* Align content to the left */
    }

        .forgot-password-form-container h2 {
            font-size: 2rem;
            margin-bottom: 20px;
            color: #5a3b36;
            font-weight: bold;
        }

        .forgot-password-form-container p {
            font-size: 1rem;
            margin-bottom: 20px;
            color: #666;
        }

        .forgot-password-form-container label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
            font-size: 1.1rem;
            color: #5a3b36;
        }

        .forgot-password-form-container input {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 2px solid rgb(251, 248, 248);
            border-radius: 0;
            font-size: 1rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

            .forgot-password-form-container input:focus {
                outline: none;
                border-color: #5a3b36;
            }

    .btn-reset-password {
        width: 100%;
        padding: 10px;
        background-color: #42262A;
        color: white;
        border: none;
        font-size: 1.2rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

        .btn-reset-password:hover {
            background-color: rgb(182, 187, 0);
            color: black;
        }

    .back-to-login {
        margin-top: 15px;
        font-size: 0.9rem;
    }

        .back-to-login a {
            color: #5a3b36;
            text-decoration: none;
            font-weight: bold;
        }

</style>

<link rel="stylesheet" href="~/css/styles.css">

<!-- Forgot Password Section -->
<section class="forgot-password-section">
    <div class="forgot-password-image-container">
        <img src="~/images/fevrier.jpg" alt="Pâtisserie" class="forgot-password-image">
    </div>
    <div class="forgot-password-form-container">
        <h2>Mot de passe oublié ?</h2>
        <p>Veuillez entrer votre adresse email pour recevoir un lien de réinitialisation de mot de passe.</p>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="nom@exemple.com" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-reset-password">Envoyer le lien de réinitialisation</button>
        </form>
        <p class="back-to-login">
            <a href="/Identity/Account/Login">Retour à la connexion</a>
        </p>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}