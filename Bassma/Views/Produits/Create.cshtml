@model Bassma.Models.Produit

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutDash.cshtml";

}

<div class="main-content position-relative border-radius-lg">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">Créer un Produit</h1>
        <a asp-action="Index" class="btn btn-secondary">Retour à la Liste</a>
    </div>

    <!-- Form Section -->
    <div class="card shadow">
        <div class="card-header bg-gradient-primary text-white">
            <h5 class="mb-0">Formulaire de Création</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Nom -->
                <div class="form-group mb-3">
                    <label asp-for="Nom" class="form-label"></label>
                    <input asp-for="Nom" class="form-control" />
                    <span asp-validation-for="Nom" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Prix -->
                <div class="form-group mb-3">
                    <label asp-for="Prix" class="form-label"></label>
                    <input asp-for="Prix" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Prix" class="text-danger"></span>
                </div>

                <!-- UserId -->
                <div class="form-group mb-3">
                    <label asp-for="UserId" class="form-label"></label>
                    <input asp-for="UserId" type="number" class="form-control" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Créer</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

