@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}
<style>
    body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        background-color: #f9f4ef; /* Light beige to match the Sweet Cravings vibe */
    }

    .forgot-password-container {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        padding: 2rem;
        text-align: center;
        min-height: 100vh;
        background: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('/images/04.jpg') no-repeat center center/cover;
    }

    .content-wrapper {
        background-color: rgba(255, 255, 255, 0.6); /* Transparent white background */
        padding: 3rem;
        border-radius: 0px;
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
        width: 80%;
        max-width: 700px;
        text-align: center;
        transition: all 0.3s ease;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: 700; /* Bolder font weight */
        color: #7a2c2a; /* Dark chocolate color */
        margin-bottom: 1.5rem;
    }

    p {
        font-size: 1.4rem;
        color: #5f5f5f;
        line-height: 1.8;
        margin-bottom: 2rem; /* Add space between paragraph and button */
    }

    .home-button {
        display: inline-block;
        font-size: 1.2rem;
        font-weight: 600;
        color: #fff;
        background-color: #7a2c2a; /* Dark chocolate button color */
        padding: 0.8rem 2rem;
        border: none;
        border-radius: 0px;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
        cursor: pointer;
    }

        .home-button:hover {
            background-color: rgb(182, 187, 0); /* Slightly lighter chocolate color */
            color: white;
        }
</style>
<div class="forgot-password-container">
    <div class="content-wrapper">
        <h1>@ViewData["Title"]</h1>
        <p>Please check your email to reset your password.</p>
        <a href="/" class="home-button">Go to Home Page</a>
    </div>
</div>